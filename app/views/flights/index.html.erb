<div class="section">
  <div class="has-text-centered">
    <h2 class="title is-2">Search for your Flights:</h2>
  </div>
  <div class="columns is-centered">
    <div class="column is-half">
      <%= simple_form_for(:search, method: :get, url: root_path )  do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :from_airport,
                collection: Flight.all.map { |flight| flight.from_airport }.uniq,
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>


      <div class="field">
        <div class="control">
          <%= f.input :to_airport,
                collection: Flight.all.map { |flight| flight.to_airport }.uniq,
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :number_of_passengers,
                collection: %w[1 2 3 4 5],
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :date,
                collection: Flight.all.map { |flight| flight.start.to_date.to_s },
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <%= f.submit 'Search', class: 'button is-primary' %>

      <% end %>
    </div>
  </div>

  <div class='column'>
    <div class="container">
      <ol>
        <% if @flights.present? %>
          <%= @flights.first.from_airport.name %>
        <% end %>
      </ol>
    </div>

  </div>

</div>