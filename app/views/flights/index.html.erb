<div class="section">
  <div class="has-text-centered">
    <h2 class="title is-2">Search for your Flights:</h2>
  </div>
  <div class="columns is-centered">
    <div class="column is-half">
      <%= simple_form_for(:search, method: :get, url: root_path )  do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :from_airport,
                collection: Flight.all.map { |flight| flight.from_airport }.uniq,
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>


      <div class="field">
        <div class="control">
          <%= f.input :to_airport,
                collection: Flight.all.map { |flight| flight.to_airport }.uniq,
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :number_of_passengers,
                collection: %w[1 2 3 4 5],
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :date,
                collection: Flight.all.map { |flight| flight.start.to_date.to_s },
                input_html: { class: 'input', value: '' },
                wrapper: false,
                include_blank: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <%= f.submit 'Search', class: 'button is-primary' %>

      <% end %>
    </div>
  </div>

  <div class="columns is-centered">
    <div class='column is-half'>
      <div class="container">

        <% if @flights.present? %>
        <div class="FLEX">
          <span class='mb-3'>
            <h4 class="title is-4">From</h4>
          </span>
          <span>
            <h4 class="title is-4">To</h4>
          </span>
        </div>
        <div class="box">
          <% @flights.each do |flight| %>
          <div class='FLEX'>
            <span>
              <h5 class="title is-5"><%= flight.from_airport.name %></h5>
            </span>
            <strong>--></strong>
            <span>
              <h5 class="title is-5"><%= flight.to_airport.name %></h5>
            </span>
            <% end %>
          </div>
          <% end %>

        </div>
      </div>
    </div>

  </div>