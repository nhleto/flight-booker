<div class="section">
  <div class="has-text-centered">
    <h2 class="title is-2">Search for your Flights:</h2>
  </div>
  <div class="columns is-centered">
    <div class="column is-half">
      <%= simple_form_for(:search, method: :get, url: root_path )  do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :from_airport,
                collection: Flight.all.map { |flight| flight.from_airport },
                input_html: { class: 'input', value: '' },
                wrapper: false,
                label_html: { class: 'label' } %>
        </div>
      </div>


      <div class="field">
        <div class="control">
          <%= f.input :to_airport,
                collection: Flight.all.map { |flight| flight.to_airport },
                input_html: { class: 'input', value: '' },
                wrapper: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :number_of_passengers,
                collection: %w[1 2 3 4 5],
                input_html: { class: 'input', value: '' },
                wrapper: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :date,
                collection: Flight.all.map { |flight| flight.start },
                input_html: { class: 'input', value: '' },
                wrapper: false,
                label_html: { class: 'label' } %>
        </div>
      </div>

      <%= f.submit 'Search', class: 'button is-primary' %>

      <% end %>
    </div>
  </div>

  <div class="has-text-centered">
    <div class="container">
      <% @flight.each do |flight| %>
        <h5 class="title is-5"><%= flight %></h5>
      <% end %>
    </div>
  </div>

</div>