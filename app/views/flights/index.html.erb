<div class="section">
  <div class="box has-text-centered">
    <h2 class="title is-2">Search for your Flights:</h2>
  </div>
  <div class="columns is-centered">
    <div class="column is-half">
      <%= simple_form_for(:flights, method: :get, url: flights_path )  do |f| %>
        <%= f.error_notification %>

        <div class="field">
          <div class="control">
            <%= f.input :name,
                required: true,
                input_html: { class: 'input' },
                wrapper: false,
                label_html: { class: 'label' } %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>