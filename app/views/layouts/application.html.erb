<!DOCTYPE html>
<html class='body has-navbar-fixed-top'>

<head>
  <title>FlightBooker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>

  <nav class="navbar is-fixed-top">
    <div class="navbar-brand">
      <%= image_tag  "flight2.png", size: '64x64', alt: 'flight logo'  %>
      <div class="navbar-item">
        <h3 class="title is-3" id='logo-text'>Flight Booker</h3>
      </div>
    </div>
    <div class="navbar-menu">
      <div class="navbar-end">
        <div class="navbar-item">
          <h3 class="title is-3" id='logo-text'><%= link_to 'Home', root_path %></h3>
        </div>
      </div>
    </div>
  </nav>


  <% if flash[:notice] %>

  <div class="container" id='odin-test'>
    <div class="notification is-primary is-light">
      <p class="notice">
        <%= notice %>
        <button class="delete" id='flash'></button>
      </p>
    </div>
  </div>

  <% end %>

  <% if flash[:alert] %>

  <div class="container" id='odin-test'>
    <div class="notification is-danger is-light">
      <p class="notice">
        <%= alert %>
        <button class="delete" id='flash'></button>
      </p>
    </div>
  </div>

  <% end %>

  <%= yield %>
</body>

</html>