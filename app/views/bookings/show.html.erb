<div class="section">
  <div class="has-text-centered">
    <h2 class="title is-2"><u>Booking Information</u></h2>
  </div>

  <div class="columns is-centered">
    <div class="column is-two-thirds">
      <% @booking.passengers.each do |passenger| %>
      <div class="section">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              Flight Confirmation
            </p>
          </header>
          <div class="columns" style='padding-top:13px'>
            <div class="column is-3" style='border-right:dashed'>
              <div class="card-content">
                <h4 class="title is-4 mb-1" style='font-size:40px; color:black'><%= @booking.flight.from_airport.name %> âž£ <%= @booking.flight.to_airport.name %></h4>
                <p style='float:left'>Flight <%= @booking.flight.id %></p>
              </div>
            </div>

            <div class="column">
              <div class="content">
                <p><u>Passenger</u></p>
                <h4 class="title is-4" style='color:black; margin-top:15px'><%= passenger.name %></h4>
              </div>
            </div>

            <div class="column">
              <p><u>Departure Date</u></p>
              <h4 class="title is-4" style='color:black; margin-top:15px'><%= @booking.flight.start.strftime("%m/%d/%Y") %></h4>
            </div>

            <div class="column">
              <p><u>Boarding Time</u></p>
              <h4 class="title is-4" style='color:black; margin-top:15px'><%= @booking.flight.start.strftime("%I:%M %p") %></h4>
            </div>

            <div class="column">
              <p><u>Flight Length</u></p>
              <h4 class="title is-4" style='color:black; margin-top:15px'><%= @booking.flight.duration.strftime("%M minutes") %></h4>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>